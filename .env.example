# FPL Settings
FPL_MANAGER_ID=              # Your FPL manager ID (optional for existing team)
FPL_EMAIL=                   # FPL email for authentication (optional)
FPL_PASSWORD=                # FPL password for authentication (optional)

# Strategy Settings
MAX_HIT_COST=8               # Maximum points to take as hits
MIN_TRANSFER_GAIN=3.0        # Minimum expected point gain per transfer
CAPTAIN_THRESHOLD=1.5        # Multiplier for captain selection threshold
VICE_CAPTAIN_THRESHOLD=1.3   # Multiplier for vice-captain threshold
WILDCARD_TEAM_ISSUES=5       # Number of squad issues to trigger wildcard
BENCH_BOOST_MIN_POINTS=20.0  # Minimum bench points to use Bench Boost
TRIPLE_CAPTAIN_MIN_POINTS=10.0  # Minimum captain points to use Triple Captain
FREE_HIT_FIXTURE_SWING=15.0  # Fixture difficulty swing to trigger Free Hit

# Optimization Settings
OPTIMIZATION_SOLVER=CBC      # Linear programming solver (CBC, GLPK, CPLEX)
OPTIMIZATION_TIME_LIMIT=60   # Solver time limit in seconds
POINTS_WEIGHT=1.0           # Weight for total points in optimization
FORM_WEIGHT=0.3             # Weight for form in optimization
FIXTURE_WEIGHT=0.2          # Weight for fixtures in optimization
VALUE_WEIGHT=0.1            # Weight for value in optimization

# System Settings
ENVIRONMENT=development      # Environment (development, production)
DEBUG=False                 # Debug mode
DRY_RUN=True               # Dry run mode (no actual changes)

# Database Settings
DB_TYPE=sqlite              # Database type (sqlite, postgresql)
DB_HOST=localhost           # Database host (for PostgreSQL)
DB_PORT=5432               # Database port (for PostgreSQL)
DB_NAME=fpl_agent          # Database name
DB_USER=                   # Database user (for PostgreSQL)
DB_PASSWORD=               # Database password (for PostgreSQL)

# Logging Settings
LOG_LEVEL=INFO             # Log level (DEBUG, INFO, WARNING, ERROR)
LOG_TO_FILE=True           # Enable file logging
LOG_TO_CONSOLE=True        # Enable console logging
LOG_ROTATION=1 day         # Log rotation period
LOG_RETENTION=7 days       # Log retention period

# Monitoring Settings
CHECK_INTERVAL=60          # Check interval in minutes (continuous mode)
DEADLINE_WARNING_HOURS=2   # Hours before deadline to trigger warning

# Notification Settings (Optional)
NOTIFICATIONS_ENABLED=False     # Enable notifications
EMAIL_NOTIFICATIONS=False       # Enable email notifications
NOTIFICATION_EMAIL=             # Email address for notifications
SLACK_NOTIFICATIONS=False       # Enable Slack notifications
SLACK_WEBHOOK_URL=             # Slack webhook URL
TELEGRAM_NOTIFICATIONS=False    # Enable Telegram notifications
TELEGRAM_BOT_TOKEN=            # Telegram bot token
TELEGRAM_CHAT_ID=              # Telegram chat ID